#header
  .container
    .row
      .col-md-4.shop_name
        = link_to("The Bookstore", root_path)

      .col-md-3.shop_links
        %ul.with_delimiter
          %li= link_to "HOME", root_path
          %li= link_to "SHOP", books_path

      .col-md-2.cart
        = link_to "CART"

      .col-md-3
        %ul.with_delimiter.user
          - if user_signed_in?
            %li= link_to "Settings", edit_user_customer_path(current_user.id)
            %li= link_to "Orders", '#'
            %li= link_to "Sign out", destroy_user_session_path, method: 'delete'
          - else
            %li= link_to "Sign in", new_user_session_path
            %li= link_to "Sign up", new_user_registration_path
