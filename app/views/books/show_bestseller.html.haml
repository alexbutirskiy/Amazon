.container.bestseller
  .row.vertical-align
    .col-md-1= bestseller_prev_link

    .col-md-10
      .row
        .col-md-12
          %p
            %span.title= @bestseller_current.title
            by
            = authors_of_book_with_links.html_safe

      .row
        .col-md-3
          = image_tag('default_cover.jpg')

        .col-md-9
          = content_tag(:p, @bestseller_current.description)

    .col-md-1
      = bestseller_next_link
