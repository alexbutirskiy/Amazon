<div class='container devise'>
  <div class='col-md-4'></div>
  <div class='col-md-4'>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='row'>
      <div class="field col-md-12">
        <%= f.email_field :email, autofocus: true, placeholder: 'your email' %>
      </div>
    </div>

    <div class='row'>
      <div class="field col-md-12">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'your password' %>
      </div>
    </div>

    <div class='row'>
      <div class='col-md-12 actions vertical-align'>
        <%= f.submit "Sign in", class: 'btn btn-lg' %>

        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        <% end -%>
      </div>
    </div>

    <% end %>
    <br>
    <p>
      Don't have an account?
      <%= link_to 'Sign up', new_user_registration_path %>
    </p>

  </div>
  <div class='col-md-4'></div>
</div>
